{
  "name": "collab-code",
  "displayName": "Collab Code OT",
  "description": "Operational Transformation collaboration plugin with WebRTC voice chat.",
  "version": "0.0.3",
  "publisher": "jules",
  "repository": {
    "type": "git",
    "url": "https://github.com/nurdwerks/fictional-happiness.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "collab-code-sidebar",
          "title": "Collab Code",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "collab-code-sidebar": [
        {
          "type": "webview",
          "id": "collabCodeView",
          "name": "Collab Code"
        }
      ]
    },
    "configuration": {
      "title": "Collab Code",
      "properties": {
        "collabCode.stunServers": {
          "type": "array",
          "default": [
            "stun:stun.l.google.com:19302"
          ],
          "description": "List of STUN servers for WebRTC"
        },
        "collabCode.turnServers": {
          "type": "array",
          "default": [],
          "description": "List of TURN servers for WebRTC"
        },
        "collabCode.defaultPort": {
          "type": "number",
          "default": 3000,
          "description": "Default port for the local collaboration server."
        },
        "collabCode.username": {
          "type": "string",
          "default": "",
          "description": "Username to display in collaboration. If empty, tries to use Git username."
        }
      }
    },
    "commands": [
      {
        "command": "collabCode.addReference",
        "title": "Add Code Reference to Chat"
      },
      {
        "command": "collabCode.runSharedCommand",
        "title": "Run Shared Command (Broadcast Output)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "collabCode.addReference",
          "group": "collab"
        }
      ],
      "view/title": [
        {
          "command": "collabCode.runSharedCommand",
          "when": "view == collabCodeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release": "npm version patch && node scripts/create-release-branch.js && git push --follow-tags",
    "release:minor": "npm version minor && node scripts/create-release-branch.js && git push --follow-tags",
    "release:major": "npm version major && node scripts/create-release-branch.js && git push --follow-tags"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.90.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^11.0.0",
    "fast-glob": "^3.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "ignore": "^5.0.0",
    "ot-text": "^1.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.0.0"
  }
}
